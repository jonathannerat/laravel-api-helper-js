{
    "compilerOptions": {
        "incremental": true,
        "outDir": "build",
        "sourceRoot": "src",
        "target": "ES6",
        "module": "ES6",
        "moduleResolution": "node16",
        "declaration": true,
        "inlineSourceMap": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true
    },
    "include": ["src"]
}
